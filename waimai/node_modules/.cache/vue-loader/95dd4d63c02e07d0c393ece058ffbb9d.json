!-- <h3>商品列表组件</h3> -->\r\n       <!-- 商品详细信息 -->\r\n       <div class=\"goods-item\" v-for=\"(item,index) of list\" :key=\"index\">\r\n           <img src=\"../../assets/avator.jpeg\" alt=\"\" style=\"width:100%;\">\r\n           <h4>{{item.title}}</h4>\r\n           <div class=\"info\">\r\n               <span class=\"now\">{{item.price}}</span>\r\n           </div>\r\n       </div>\r\n       <!-- 商品详细信息 end -->\r\n       <mt-button size=\"large\"  @click=\"loadMore\" style=\"color:#fff;\">加载更多</mt-button>\r\n   </div>\r\n</template>\r\n<script>\r\nexport default {\r\n    data(){\r\n        return{\r\n         list:[],//保存服务器数据\r\n         pno:0,  //\r\n         pageSize:4\r\n        }\r\n    },\r\n    created(){\r\n        this.loadMore()\r\n    },\r\n    methods:{\r\n        //加载更多\r\n       loadMore(){\r\n         //console.log(123)\r\n         //1.获取当前页码加1\r\n         this.pno++;\r\n         //2.创建url 请求地址\r\n         var url=\"product\";\r\n         //3.创建参数对象\r\n         var obj={pno:this.pno,pageSize:this.pageSize}\r\n           \r\n         //4.发送ajax\r\n         this.axios.get(url,{params:obj})\r\n         .then(result=>{\r\n              //5.接收服务器返回数据\r\n             //console.log(result.data.data)\r\n              //6.保存list\r\n              if(result.data.code==-1){\r\n                this.$toast(\"我也是有底线的(⊙o⊙)…\")\r\n               return;\r\n              } \r\n             var rows=this.list.concat(result.data.data) //拼接页面保存在一个数组中\r\n             this.list=rows\r\n             //console.log(this.list)\r\n         }) \r\n       }\r\n    }\r\n}\r\n</script>\r\n<style>\r\n    .container{\r\n        display: flex;\r\n        justify-content: space-between;\r\n        flex-wrap: wrap;/*子元素换行*/\r\n        padding:4px;\r\n    }\r\n    .goods-item{\r\n        display: flex; /*弹性布局*/\r\n        flex-direction: column;/*方向按列*/\r\n        width:49%;\r\n        border:1px solid #ccc;\r\n        margin:2px 0;\r\n        padding:2px;\r\n        min-height:247px;\r\n    }\r\n    \r\n</style>"]}]}